# GUAC Environment Configuration

# PostgreSQL Database Configuration
POSTGRES_DB=guac
POSTGRES_USER=guac
POSTGRES_PASSWORD=guac-password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# GUAC GraphQL Configuration
GUAC_GQL_ADDR=0.0.0.0:8080
GUAC_GQL_DEBUG=true
GUAC_GQL_BACKEND=ent

# GUAC REST API Configuration
GUAC_REST_ADDR=0.0.0.0:8081

# NATS Configuration
NATS_ADDR=nats://nats:4222

# Collector Subscriber Configuration
CSUB_ADDR=guac-collectsub:2782

# Blob Storage Configuration
BLOB_ADDR=file:///tmp/blobstore?no_tmp_dir=true

# Data Collection Intervals
OSV_INTERVAL=5m
DEPSDEV_INTERVAL=5m

# GUAC Version
GUAC_VERSION=v0.8.6 